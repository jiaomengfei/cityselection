<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jiao.cityapplication.activity.ViewActivity">
    <com.example.jiao.cityapplication.view.BaseTitleBar
        android:id="@+id/ctbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:baseTextColor="@color/color_cccccc" />
    <com.example.jiao.cityapplication.chatview.view.ChatInputMenu
        android:id="@+id/input_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
